            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="편집">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#openReorderPage" text="테이블 재배치" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="서버">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#OpenServer" text="서버열기" />
                  <MenuItem mnemonicParsing="false" onAction="#CloseServer" text="서버닫기" />
