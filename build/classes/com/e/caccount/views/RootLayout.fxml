            </Menu>
            <Menu mnemonicParsing="false" text="엑셀">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#SaveFileAsExcel" text="헌금집계표 만들기" />
                  <MenuItem mnemonicParsing="false" onAction="#SaveOneTypeToExcel" text="타입별 저장" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="QR코드">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#OpenQRcodeMaker" text="QR코드 만들기" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="도움말">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openHelpPage" text="사용법">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="P" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>
